<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.evantage.zitcotest.domain.user.User" table="user" >
        <id name="id" type="Integer">
            <column name="id" length="20" not-null="true"/>
            <generator class="identity" />
        </id>
        <property name="name" type="string">
            <column name="name" length="10" not-null="true" />
        </property>
        <property name="role" type="string">
            <column name="role" length="20" not-null="true" />
        </property>
        <property name="user_name" type="string">
            <column name="user_name" length="20" not-null="true" />
        </property>
        <property name="password" type="string">
            <column name="password" length="20" not-null="true" />
        </property>
        
    </class>
</hibernate-mapping>